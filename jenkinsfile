pipeline {
    agent any

    environment {
        DOCKER_HOST = 'unix:///var/run/docker.sock'
    }

    stages {
        stage('Construir imagen web') {
            steps {
                sh 'docker build -t mi-web ./web'
            }
        }

        stage('Reiniciar contenedor web') {
            steps {
                sh '''
                docker stop mi-web || true
                docker rm mi-web || true
                docker run -d --name mi-web -p 8080:80 mi-web
                '''
            }
        }

        stage('Verificar contenedores activos') {
            steps {
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo 'Â¡Despliegue exitoso con docker CLI! ðŸš€'
        }
        failure {
            echo 'Algo fallÃ³ ðŸ˜¢'
        }
    }
}
