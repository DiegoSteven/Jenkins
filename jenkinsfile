pipeline {
    agent any

    stages {
        stage('Construir y levantar contenedores') {
            steps {
                script {
                    sh 'docker-compose down || true'
                    sh 'docker-compose up -d --build'
                }
            }
        }

        stage('Verificar servicios') {
            steps {
                sh 'docker ps'
            }
        }
    }

    post {
        success {
            echo 'Â¡Despliegue exitoso con Docker Compose! ðŸš€'
        }
        failure {
            echo 'Algo fallÃ³ ðŸ˜¢'
        }
    }
}
